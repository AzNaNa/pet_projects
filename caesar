print("Добро пожаловать в шифр Цезаря! Выберите направление, шифрование или дешифрование?")
direction = input()
print("Выберите язык. Английский/Русский")
language = input()
print("Укажите шаг сдвига")
step = input()
print("Введите ваше предложение")
string = input()
def caesar_encryption(direction, language, step, string):
    answer = ''
    shift = int(step)
    if direction.lower() in ["дешифрование", "дешифровка", "д"]:
        shift = -shift  # меняем знак на противоположный
    if language.lower() in ["русский", "рус"]:
        for char in string:
            if char.isalpha():
                if char.islower():
                    answer += chr((ord(char) - ord('а') + shift) % 32 + ord('а'))
                else:
                    answer += chr((ord(char) - ord('А') + shift) % 32 + ord('А'))
            else:
                answer += char
        return answer   
    elif language.lower() in ["английский", "англ"]:
        for char in string:
            if char.isalpha():
                if char.islower():
                    answer += chr((ord(char) - ord('a') + shift) % 26 + ord('a'))
                else:
                    answer += chr((ord(char) - ord('A') + shift) % 26 + ord('A'))
            else:
                answer += char
        return answer

print(caesar_encryption(direction, language, step, string))